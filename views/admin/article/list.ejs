<div class="container">
    <div class="d-flex justify-content-between mb-10 w-100">
        <h3 class="card-title align-items-start flex-column">
                                                <span class="card-label fw-bold text-gray-800">
                                                    Danh sách Bài viết
                                                </span>
        </h3>
        <form class="d-flex" method="post" action="list">
            <input class="form-control" type="search" name="title" placeholder="Tiêu đề" aria-label="Search">
            <input class="form-control" type="search" name="author" placeholder="Tên tác giả" aria-label="Search">
            <input class="form-control" type="date" name="createdAt" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
        <a href="create" class="card-title align-items-start flex-column btn btn-sm fw-bold btn-primary">ADD NEWS</a>
    </div>
    <div class="card-body pt-2">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="kt_stats_widget_16_tab_1">
                <div class="table-responsive">
                    <table class="table table-row-dashed align-middle gs-0 gy-3 my-0">
                        <thead>
                        <tr class="fs-7 fw-bold text-gray-500 border-bottom-0">
                            <th class="p-0 pb-3 min-w-100px text-center pe-13">
                                ORD
                            </th>
                            <th class="p-0 pb-3 min-w-100px text-center pe-13">
                                TITLE
                            </th>
                            <th class="p-0 pb-3 min-w-100px text-center pe-13">
                                CATEGORY
                            </th>
                            <th class="p-0 pb-3 min-w-100px text-center pe-13">
                                AUTHOR
                            </th>
                            <th class="p-0 pb-3 min-w-100px text-center pe-13">
                                STATUS
                            </th>
                            <th class="p-0 pb-3 w-100px text-center">ACTIONS</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% if (articles && articles.length > 0) { %>
                            <% articles.forEach((article, index) => { %>
                                <tr>
                                    <td class="text-center pe-13">
                                        <span class="text-gray-600 fw-bold fs-6"><%= index + 1 %></span>
                                    </td>
                                    <td class="text-center pe-13">
                                        <span class="text-gray-600 fw-bold fs-6"><%= article.title %></span>
                                    </td>
                                    <td class="text-center pe-13">
                                        <span class="text-gray-600 fw-bold fs-6"><%= article.categoryId.name %></span>
                                    </td>
                                    <td class="text-center pe-13">
                                        <span class="text-gray-600 fw-bold fs-6"><%= article.author %></span>
                                    </td>
                                    <% if (article.status !== 'chua_duyet') { %>
                                        <% if (article.status === 'duyet') { %>
                                            <td class="text-center pe-13">
                                                <span class="text-gray-600 fw-bold fs-6">Duyệt</span>
                                            </td>
                                        <% } else if (article.status === 'da_xoa') { %>
                                            <td class="text-center pe-13">
                                                <span class="text-gray-600 fw-bold fs-6">Đã xóa</span>
                                            </td>
                                        <% } %>
                                    <% } else { %>
                                        <td class="text-center pe-13">
                                            <span class="text-gray-600 fw-bold fs-6">Chưa duyệt</span>
                                        </td>
                                    <% } %>
                                    <td class="text-center d-flex justify-content-center">
                                        <a href="edit/<%= article._id %>"
                                           class="btn btn-sm btn-icon btn-bg-success btn-active-color-success w-30px h-30px">
                                            <i class="fa-solid fa-pen text-light"></i>
                                        </a>
                                        <a href="#"
                                           class="btn btn-sm btn-icon btn-bg-danger btn-active-color-danger w-30px h-30px">
                                            <i class="fa-solid fa-trash text-light"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                        </tbody>
                    </table>
                    <div class="pagination">
                        <% if (currentPage > 1) { %>
                            <a class="page-item"
                               href="?page=<%= currentPage - 1 %>&title=<%= query.title %>&author=<%= query.author %>&createdAt=<%= query.createdAt %>">Previous</a>
                        <% } %>
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <a href="?page=<%= i %>&title=<%= query.title %>&author=<%= query.author %>&createdAt=<%= query.createdAt %>"
                               class="page-item <%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                        <% } %>
                        <% if (currentPage < totalPages) { %>
                            <a class="page-item"
                               href="?page=<%= currentPage + 1 %>&title=<%= query.title %>&author=<%= query.author %>&createdAt=<%= query.createdAt %>">Next</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>